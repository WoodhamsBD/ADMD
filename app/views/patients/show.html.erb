<% provide(:title, @patient.name) %>

<div class="row">
	<div class="options_row center">
    <%= link_to "Edit Patient", edit_patient_path, class: "btn btn-primary" %>
    <%= link_to "Delete Patient", @patient, method: :delete,:data => {confirm: 'Are you sure you want to delete this patient? There is NO recovery option!'}, class: "btn btn-danger" %> 
    <%= link_to "Create Appointment",
		<p>Here will be buttons for each: Appointments, Events, Billing</p>
	</div>
</div>

<div class="row">
  <aside class="col-md-4">
    <section class="patient_info">
      <h1><%= @patient.name %></h1>
      <hr>

        <h4>Report Information:</h4>
        <p>Claim Number: <%= @patient.claim_number %>
        <p>Panel Number: <%= @patient.panel_number %>
        <p>WCAB Number: <%= @patient.wcab_number %> 
        <hr>

        <h5>Address:</h5>
        <p><%= @patient.address %></p>
        <h5>Phone Number:</h5><p><%= @patient.phone %></p>
        <h5>SSN:</h5><p><%= @patient.ssn %> </p>
        <h5>Date Of Birth:</h5><p><%= @patient.dob %></p>
        
        <hr>
        <h5>Notes:</h5><p><%= @patient.notes %></p>    
        </section>

        <%= link_to "Edit", edit_patient_path, remote: true, class:"btn btn-default" %>
  </aside>

  <div class="col-md-4">

    <section class="patient_appointment_info">
      <h4>Upcoming Appointments:</h4>
        <p>Pull list of Appointments here</p>

    </section>


    <section class="patient_attorney_info">
      <% if @patient.attorneys.any? %>
      <h5>Patient Attorneys:</h5>
        <%= render @attorneys, local_assigns %>
      <% end %>
    </section>
  </div>

  <div class="col-md-4">
    <h4>Templates</h4>

  </div>

</div>