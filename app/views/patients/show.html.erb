<% provide(:title, @patient.name) %>

<div class="row">
	<div class="options_row center">
    <%= link_to "Edit Patient", edit_patient_path, class: "btn btn-primary" %>
    <%= link_to "Delete Patient", @patient, method: :delete,:data => {confirm: 'Are you sure you want to delete this patient? There is NO recovery option!'}, class: "btn btn-danger" %> 
		<p>Here will be buttons for each: Appointments, Events, Billing</p>
	</div>
</div>

<div class="row">
  <aside class="col-md-6">
    <section class="patient_info">
      <h1><%= @patient.name %></h1>
      <hr>

        <h4>Report Information:</h4>
        <p>Claim Number: <%= @patient.claim_number %>
        <p>Panel Number: <%= @patient.panel_number %>
        <p>WCAB Number: <%= @patient.wcab_number %>
        <h4>Address:</h4>
        <p><%= @patient.address %></p>
        <h4>Phone Number:</h4><p><%= @patient.phone %></p>
        <h4>SSN:</h4><p><%= @patient.ssn %> </p>
        <h4>Date Of Birth:</h4><p><%= @patient.dob %></p>

        <h4>Notes: <%=@patient.notes %></h4>
    </section>
  </aside>
</div>