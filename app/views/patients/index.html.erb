<% if logged_in? %>
<% provide(:title, 'All Patients') %>
<h1>All Patients</h1>

<div class="col-md-2">
	<%= form_tag(patients_path, method: :get, id: 'search-form') do %>
		<%= hidden_field_tag :direction, params[:direction] %>
		<%= hidden_field_tag :sort, params[:sort] %>
		<p>
	  <%= text_field_tag :search, params[:search], placeholder:"Search By Name" %>
	  <%= submit_tag 'Search', name: nil %>
	  </p>
	<% end %>
</div>

<div class="col-md-10">

		<table class="patientTable table">
			<tr>
			<th class="">ID</th>
			<th class="">Name</th>
			<th class="">DOB</th>
			<th class="">Updated At</th>
			<th class="">Created At</th>
		</tr>
			<%= render @patients %>
		</table>
	<%= will_paginate @patients %>
	<% end %>
</div>
